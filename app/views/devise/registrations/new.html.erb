<div class="container">
  <div class="row">
      <h2>新規会員登録</h2><br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      <div class="col-xs-9 col-xs-offset-3">
        <div class="field"><br>
          <%= f.label "名前" %>
          <%= f.label "(姓)" %>
          <%= f.text_field :family_name, placeholder: "山田" %>
          <%= f.label "(名)" %>
          <%= f.text_field :last_name, placeholder: "花子" %><br>
        </div>
        <div class="field"><br>
          <%= f.label "フリガナ" %>
          <%= f.label "(セイ)" %>
          <%= f.text_field :family_name_kana, placeholder: "ヤマダ" %>
          <%= f.label "(メイ)" %>
          <%= f.text_field :last_name_kana, placeholder: "ハナコ" %><br>
        </div>

        <div class="field"><br>
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field"><br>
          <%= f.label "郵便番号（ハイフンなし）" %>
          <%= f.text_field :postcode %>
        </div>

        <div class="field"><br>
          <%= f.label "住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="field"><br>
          <%= f.label "電話番号（ハイフンなし）" %>
          <%= f.text_field :phone_number %>
        </div>

        <div class="field"><br>
          <%= f.label "パスワード" %>

          <%= f.password_field :password, autocomplete: "new-password" %><br>
        </div>

        <div class="field"><br>
          <%= f.label "パスワード（確認用）" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br>
        </div>

        <div class="actions"><br>
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>

      <h3>既に登録済みの方</h3>

      <%= render "devise/shared/links" %>

      </div>


    </div>
  </div>
</div>
