<div class="container">
  <div class="row">
    <div class="col-xs-9 col-xs-offset-2">
      <h2>配送先登録/一覧</h2><br></div>

      <div class="col-xs-9 col-xs-offset-1">
      <%=form_for(@address) do |f| %>
        <div class="field"><br>
          <%= f.label "郵便番号（ハイフンなし）" %>
          <%= f.text_field :postcode %>
        </div>

        <div class="field"><br>
          <%= f.label "住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="field"><br>
          <%= f.label "宛名" %>
          <%= f.text_field :ship_name %>
        </div></div>

        <div class="col-xs-3 col-xs-offset-9">
        <div class="action">
          <%= f.submit "登録する", class: "btn btn-success" %>
        </div>
        <% end %><br></div>

        <div class="col-xs-9">
        <table class="table table-bordered">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
          <% @addresses.each do |f| %>
          <tr>
          	<td><%= f.postcode %></td>
          	<td><%= f.address %></td>
          	<td><%= f.ship_name %></td>
          	<td><%= link_to "編集する", edit_address_path(f), class: "btn btn-info" %>
          		<%= link_to "削除する", address_path(f), method: :delete, class: "btn btn-danger" %>
          	</td>
          </tr>
          <% end %></div>
        </table>
  </div>
</div>
