<div class="container">
  <div class="row">

    <h2>ジャンル追加・一覧画面</h2>

<!-- ジャンル新規作成 -->
        <%= form_for(@newgenre, url: admins_genres_path, method: :post) do |f| %>
          <p>
            <span>ジャンル</span>
            <%= f.text_field :name %>
<!-- 有効・無効 -->
            <%= f.check_box :is_status, autofocus: true %>
            <%= f.submit '追加' %>
          </p>
        <% end %>

<!-- ジャンル一覧 -->
    <div class="col-xs-3">
        <table class="table table-default">
  	       <tr>
  		      <th>ジャンル</th>
  		      <th>状態</th>
  		      <th></th>
  	       </tr>
	       <% @genres.each do |genre| %>
	          <tr>
		          <td><%= genre.name %></td>
		          <td><%= genre.is_status?? 'OK': 'NG' %></td>
		          <td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
	          </tr>
        <% end %>
        </table>
    </div>
  </div>
</div>

