<head>
  <style media="screen">
    .item-box {
      float: left;
      padding-left: 50px;
      margin-top: 30px;
    }
  </style>
</head>
<div class="item-index">
  <% items.each do |item| %>
    <div class="item-box">
      <div class="item-image">
      <% if item.is_sale == false%>
        <%= attachment_image_tag item, :image, :fill, 200, 140,
          fallback: "noimage.jpg", size: "200x140" %>
        <% else %>
        <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, :fill, 200, 140,
          fallback: "noimage.jpg", size: "200x140" %>
        <% end %>
      <% end %>
      </div>
      <h4><%= item.name %></h4>
      <% if item.is_sale == false %>
        <p style="color: red;">sorry, not for sale</p>
      <% else %>
        <p>¥<%= item_price(item) %>(税込)</p>
      <% end %>
    </div>
  <% end %>

</div>
