<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <%= form_for @order, url: orders_confirm_path, method: :post do |f| %>
      <h3>注文情報入力</h3>
      <h4>支払い情報</h4>
        <%= f.radio_button :payment_method, :credit %>
        <%= f.label "クレジットカード" %><br>
        <%= f.radio_button :payment_method, :bank %>
        <%= f.label "銀行振込" %>
  　  <h3>お届け先</h3>
        <h4>ご自身の住所</h4>
        <p>〒<%= current_customer.postcode %></p>
        <p><%= current_customer.address %></p>
        <p><%= current_customer.family_name %><%= current_customer.last_name %></p>
        <h4>登録済住所から選択</h4>
        <%= current_customer.addresses %>
        <h4>新しいお届け先</h4>
        <%= f.label "郵便番号" %>
        <%= f.text_field :postcode %><br>
        <%= f.label "住所" %>
        <%= f.text_field :address %><br>
        <%= f.label "宛名" %>
        <%= f.text_field :ship_name %><br>
        <%= f.submit "確認画面へ進む" %>
        <% end %>


    </div>

  </div>

</div>
