<div class="container">
  <div class="row">
    <div class="col-xs-9">
      <h3 class="genre-title-index">
      <strong>ジャンル追加・一覧画面</strong>
      </h3>
<!-- ジャンル新規作成 -->
      <div class= "genre-form">
        <%= form_for(@newgenre, url: admins_genres_path, method: :post, local:true) do |f| %>
            <sapn>ジャンル</span>
            <%= f.text_field :name ,:placeholder => "例:ケーキ"%>
<!-- 有効・無効 -->
            <%= f.radio_button :is_status, :true %>
            <%= f.label :is_status,"有効", {value: :true, style: "display :inline-block;"} %>
            <%= f.radio_button :is_status, :false %>
            <%= f.label :is_status,"無効", {value: :false,
              style: "display :inline-block;"} %>
            <%= f.submit '追加' ,class:"btn btn-info "%>
        </div>
        <% end %>
<!-- ジャンル一覧 -->
        <table class="table table-default genre-table">
  	       <tr>
  		      <th>ジャンル</th>
  		      <th>状態</th>
  		      <th></th>
  	       </tr>
	       <% @genres.each do |genre| %>
	          <tr>
		          <td><%= genre.name %></td>
		          <td><%= genre.is_status?? '有効': '無効' %></td>
		          <td><%= link_to "編集する", edit_admins_genre_path(genre) ,class: "btn btn-info btn-sm"%></td>
	          </tr>
        <% end %>
        </table>
      </div>
  </div>
</div>


