
<div class="container">
  	<div class="item_new_logo">
	  <h3><strong>商品新規登録画面</strong></h3>
    </div><br>

    <%= form_for @item , url: admins_items_path , method: :post do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

	<div class="col-xs-6">
	  <div class="image_wrapper">
	  	<div class="item_image_btn">
	      <%= f.attachment_field :image , id: "file" %>
        </div>
        <div id="img_field" onClick="$('#file').click()" >
      	   <i class="fas fa-image">画像を追加する</i>
        </div>
	  </div>
  	</div>

	<div class="col-xs-2 ">
	  <div class="item_box">
		<p><strong>商品名</strong></p>
	  </div><br>

	  <div class="item_box">
		<p><strong>商品説明</strong></p>
	  </div><br><br><br><br><br><br><br><br>

	  <div class="item_box">
		<p><strong>ジャンル</strong></p>
	  </div><br>

	  <div class="item_box">
		<p><strong>税抜価格</strong></p>
	  </div><br><br>

	  <div class="item_box">
		<p><strong>販売ステータス</strong></p>
	  </div>
    </div>

    <div class="col-xs-4" >
    	<div><%= f.text_field :name , class:"item_select " , placeholder: "例:ショートケーキ"%></div><br>
    	<div><%= f.text_area :text , class:"item_select , text_area" , placeholder: "例:イチゴたっぷりの...." %></div><br><br>
		<div><%= f.collection_select :genre_id , @genres , :id, :name , class:"btn btn-default" %></div><br><br>
		<div><%= f.text_field :price , class:"item_select" , placeholder: "数字のみ"%></div><br><br>
		<div><%= f.select :is_sale ,[['販売中',true],['売り切れ',false]] , class:"btn btn-default" %></div><br><br><br>
		<div class="item_btn">
	  	  <%= f.submit "商品新規登録" ,class: "btn btn-info , item_select " %>
	    </div>
    </div>
    <% end %>
</div>

