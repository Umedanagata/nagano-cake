<div class="container">
  <div class="row">
    <div class="col-xs-7 col-xs-offset-2">
      <h3>注文履歴一覧</h3></div><br><br><br>

      <div class="col-xs-offset-1">
      <table class="table table-bordered">
        <tr class="success">
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払総額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>

        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d')%></td>
          <td><%= order.postcode %><br>
              <%= order.address %><br>
              <%= order.ship_name %>
          </td>

          <% order.order_items.each do |order_item| %>
          <td><%= order_item.name %></td>

          <td><% price = (order_item.price * 1.1).floor %>
              <% price %>
              <% amount = (order_item.quantity).to_i * price %>
              <%= converting_to_jpy(amount) %>円
          </td>
          <% end %>

          <td><%= order.orders_status %></td>

          <td><%= link_to "表示する", order_path(@orders), class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>