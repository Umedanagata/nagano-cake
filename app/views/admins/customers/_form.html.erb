<!-- 会員一覧表示 -->
  <table class="table table-default">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    <% customers.each do |customer| %>
      <tr>
          <td><%= customer.id %></td>
<!-- 編集リンク -->
          <td>
          <%= link_to admins_customer_path(customer.id) do %>
          <%= customer.family_name<< customer.last_name %>
          <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <%= customer.deleted_at?? '退会済み': '有効' %>
          </td>
      </tr>
    <% end %>
  </table>

<!-- ページネーション実装 -->
<div class="text-center">
    <%= paginate customers %>
</div>