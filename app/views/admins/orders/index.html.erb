<div class="container">
  <div class="row">

    <h2>注文一覧画面</h2>
<!-- 注文一覧表示 -->
  <table class="table table-default">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <% link_to admins_order_path(customer.orders) do %>
        <%= order.created_at %>
        <% end %>
      </td>
      <td><%= orders.customer.family_name<< orders.customer.last_name %></td>
      <td><%= order.quantity %></td>
      <td><%= order.orders_status %></td>
    </tr>
    </table>
    <% end %>
  <%= paginate @orders %>
  </div>
</div>
