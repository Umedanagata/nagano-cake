<div class="container">
  <div class="row">
    <div class="col-xs-9 col-xs-offset-2">
      <h2>配送先編集</h2><br></div>

      <%=form_for (@addresses) do |f|%>
      <div class="col-xs-9 col-xs-offset-1">
        <div class="field"><br>
          <%= f.label "郵便番号（ハイフンなし）" %>
          <%= f.text_field :postcode %>
        </div>

        <div class="field"><br>
          <%= f.label "住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="field"><br>
          <%= f.label "宛名" %>
          <%= f.text_field :ship_name %>
        </div></div>

        <div class="col-xs-3 col-xs-offset-9">
        <div class="action"><br>
          <%=f.submit "編集する", class: "btn btn-primary" %>
        </div>
       <% end %></div>
  </div>
</div>