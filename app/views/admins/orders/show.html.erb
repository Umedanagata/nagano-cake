<div class="container">
  <div class="row">
   <div class="col-xs-12">
    <h2>注文詳細画面</h2>

<!-- 注文詳細 -->
        <table class="table table-default">
           <tr>
        	    <th>購入者</th>
        	    <td>
               <%= link_to "名前ここに", admins_customer_path(2) %>
              </td>
        	　</tr>
        	　<tr>
        	    <th>配送先</th>
        	    <td>
                <% if @order.address == nil %>
                    <span>
                    〒<%= @order.customer.postcode %><%= @order.customer.address %><br>
                    <%= @order.customer.family_name %><%= @order.customer.last_name %>
                    </span>
                <% else %>
                    <span>
                    〒<%= @order.postcode %><%= @order.address %><br>
                    <%= @order.ship_name %>
                    </span>
                <% end %>
              </td>
        	　</tr>
        	　<tr>
        	    <th>支払い方法</th>
        	    <td>
               <%= @order.payment_method %>
              </td>
            </tr>
<!-- ステータス変更 -->
            <tr>
        	    <th>ステータス変更</th>
        	    <td>
                <%= form_with(@order, model: order, local: true, url: admins_orders_path, method: :patch) do |f| %>

                  <%= f.label :production_status %>
                  <%= f.select :production_status, Order.production_statuses.keys, :selected => Order.production_statuses[ @order.production_status] %>
                  <% f.submit %>
                <% end %>
              </td>
            </tr>
        </table>

<!-- 注文一覧 -->
    <div class="row">
      <div class="col-xs-9">
        <table class="table table-default">
          <tr>
            <tr>
        	    <th>商品名</th>
        	    <th>金額(税込)</th>
        	    <th>数量</th>
        	    <th>小計</th>
<!-- ステータスのupdate -->
        	    <th>
        	    製作ステータス
        	    </th>
            </tr>
          <% @orders.each do |order| %>
          <tr>
              <td><%= order.order_items.name %></td>
              <td><%= order.order_items.name %></td>
              <td><%= order.order_items.name %></td>
              <td><%= order.order_items.name %></td>
              <td>
                <%= form_with(model: order, local: true, url: admins_orders_path, method: :patch) do |f| %>

                  <%= f.label :production_status %>
                  <%= f.select :production_status, Order.production_statuses.keys, :selected => Order.production_statuses[ @order.production_status] %>
                  <% f.submit %>
                <%= order.order_items.name %>
                <% end %>
              </td>
          </tr>
          <% end %>
          </tr>
        </table>
      </div>

<!-- 商品合計金額 -->
　　　 <div class="col-xs-3">
      	  <p>商品合計<%= 10500.to_s(:delimited, delimiter: ',').floor %>円</p>
      	  <p>送料<%= 800 %>円</p>
      	  <p>請求金額合計<%= %>円</p>
      </div>
    </div>
  </div>

