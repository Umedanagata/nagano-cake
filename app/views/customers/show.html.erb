<div class="container">
  <div class="row">
  	<div class="col-xs-9 col-xs-offset-3">
    <h3>マイページ</h3><br></div>

    <strong>登録情報</strong>
      <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-info" %>
      <%= link_to "パスワードを変更する",edit_customer_password_path, class: "btn btn-info" %>

    <div class="field">氏名
      <%= @customer.family_name %>
      <%= @customer.last_name %>
    </div>

    <div class="field">カナ
      <%= @customer.family_name_kana %>
      <%= @customer.last_name_kana %>
    </div>

    <div class="field">郵便番号
      <%= @customer.postcode %>
    </div>

    <div class="field">住所
      <%= @customer.address %>
    </div>

    <div class="field">電話番号
      <%= @customer.phone_number %>
    </div>

    <div class="field">メールアドレス
      <%= @customer.email %>
    </div>

    <strong>配送先</strong>
      <%= link_to "一覧を見る", addresses_path,  class: "btn btn-info" %><br>

    <strong>注文履歴</strong>
      <%= link_to "一覧を見る", orders_path,  class: "btn btn-info" %>
  </div>
</div>