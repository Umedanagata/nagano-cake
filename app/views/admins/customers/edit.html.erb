<div class="container">
  <div class="row">
    <div class="col-xs-2">
       <h3><strong>会員編集画面</strong></h3>
    </div>
<!-- 会員編集画面 -->
    <div class="col-xs-10 , customer_table">
       <%= form_for(@customer, url: admins_customer_path, method: :patch) do |f| %>
      <table class="table">
          <tr>
            <td><%= f.label "会員ID" %></td>
            <td><%= @customer.id %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label "氏名" %></td>
            <td><%= f.text_field :family_name %></td>
            <td> <%= f.text_field :last_name %></td>
          </tr>
          <tr>
            <td><%= f.label "フリガナ" %></td>
            <td><%= f.text_field :family_name_kana %></td>
            <td> <%= f.text_field :last_name_kana %></td>
          </tr>
          <tr>
            <td><%= f.label "郵便番号" %></td>
            <td><%= f.text_field :postcode %></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label "住所" %></td>
            <td><%= f.text_field :address%></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label "電話番号" %></td>
            <td><%= f.text_field :phone_number%></td>
            <td></td>
          </tr>
          <tr>
            <td><%= f.label "メールアドレス" %></td>
            <td><%= f.text_field :email%></td>
            <td></td>
          </tr>
      </table>
  <!-- ステータス変更 -->
    <p>
       <%= f.radio_button :is_active, :true %>
       <%= f.label :is_active,"有効", {value: :true, style: "display :inline-block;"} %>
       <%= f.radio_button :is_active, :false %>
       <%= f.label :is_active,"退会済み", {value: :false, style: "display :inline-block;"} %>
    </p>
      <%= f.submit "変更を保存する" ,data:{confirm:"本当に変更しますか？"} , class:"btn btn-info , btn btn-lg" %>
    <% end %>
  </div>
  </div>
</div>