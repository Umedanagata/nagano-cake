<div class="item_new_continer">
<div class="item_new_logo">
		<h3>商品新規登録画面</h3>
</div>
</div>

<%= form_for @item , url: admins_items_path , method: :post do |f| %>
  <div class="container">
	<div class="col-xs-3 ">
		<div class="item_new_image">
          <%= attachment_image_tag @item , :image ,:fill ,200 ,200 ,fallback: 'noimage.jpg' %>
		</div>
		<div class="item_new_image_btn">
			<%= f.attachment_field :image %>
		</div>
	</div>

	<div class="col-xs-6 ">

	<div class="item_new_name">
		<div class="item_new_name">
			<p>商品名</p>
		</div>
		<div>
			<%= f.text_field :name %>
		</div>
	</div>

	<div class="item_new_text">
		<div class="item_new_text">
			<p>商品説明</p>
		</div>
		<div>
			<%= f.text_area :text %>
		</div>
	</div>

	<div>
		<div>
			<p>ジャンル</p>
		</div>

		<div>
			<%= f.collection_select :genre_id , @genres , :id, :name ,{include_blank: "----"} %>
		</div>
	</div>

	<div>
		<div>
			<p>税抜価格</p>
		</div>

		<div>
			<%= f.text_field :price %>
		</div>
	</div>

	<div>
		<div>
			<p>販売ステータス</p>
		</div>

		<div>
			<%= f.collection_select :is_sale @item %>
		</div>
	</div>

	<div class="col-xs-3 ">
		<%= f.submit "新規登録"%>
	</div>
  </div>
  </div>
	<% end %>
