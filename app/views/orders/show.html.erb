	<div class=" row">
		<div>
			<h3>注文履歴詳細</h3>
		</div><br>
		<div class="col-xs-6">
			<p>注文情報</p>
			<table class="table">
					<tr>
						<th>注文日</th>
						<th><%= @order.created_at. strftime('%Y/%m/%d/%R') %></th>
					</tr>
					<tr>
						<th>配送先</th>
						<th><%= @orders.postcode %><br><%= @order.address %></th>
					</tr>
