						<th><%= @order.order.status%></th>
					</tr>
			</table>
		</div>

		<div class="col-xs-6">
			<p>請求情報</p>
			<table class="table">
					<tr>
						<th>商品合計</th>
						<th><%= order.quantity%></th>
					</tr>
					<tr>
						<th>配送料</th>
						<th><%= @order.postage %></th>
					</tr>
					<tr>
						<th><strong>ご請求金額</strong></th>
						<th><%= @order.amount %></th>
					</tr>
			</table>
		</div>

		<div class="col-xs-8">
			<p>注文内容</p>
			<table class="table">
					<tr>
						<th>商品</th>
						<th>単価</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
					<tr>
						<th><%= @order.item.name%></th>
						<th><%= @order.item.price%></th>
						<th><%= @order.item.count%></th>
						<th><%= @order%></th>
					</tr>
			</table>
		</div>
	</div>
