<div class="container">
  <div class="row">

    <h2>注文一覧画面</h2>
<!-- 注文一覧表示 -->
  <table class="table table-default">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to admins_order_path(order.order_items.id) do %>
        <%= order.created_at. strftime('%Y/%m/%d/%R') %>
        <% end %>
      </td>
      <td><%= order.customer.family_name<< order.customer.last_name %></td>
      <td><%= order.order_items.name %></td>
      <td><%= order.orders_status %></td>
    </tr>
    <% end %>
    </table>
    <%= paginate @orders %>
  </div>
</div>
<!-- ページャ実装 -->