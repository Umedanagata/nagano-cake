<h2>ジャンル追加・一覧画面</h2>

<!-- ジャンル新規作成 -->
<%= form_for(@newgenre, url: admins_genres_path, method: :post) do |f| %>
      <p>
          <span>ジャンル</span>
          <%= f.text_field :name %>
<!-- 有効・無効 -->
          <%= f.submit '追加' %>
      </p>
<% end %>

<!-- ジャンル一覧 -->
<table>
  	   <tr>
  		    <th>ジャンル</th>
  		    <th>状態</th>
  		    <th></th>
  	   </tr>
	  <% @genres.each do |genre| %>
	      <tr>
		       <td><%= genre.name %></td>
		       <td><%= genre.genres_status %></td>
		       <td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
	      </tr>
    <% end %>
   </tr>
</table>

