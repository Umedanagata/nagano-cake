
<div class="conteiner">
  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <%= render "search_form" %>
    </div>
    <div class="col-xs-8">
      <h1>商品一覧</h1>(全<%= @items.count %>件)
      <% @items.each do |item| %>
        <div class="items-image">
          <%= attachment_image_tag item, :image, :fill, 300, 200, format: 'jpeg', fallback: "noimage.jpg" %>
        </div>
        <%= link_to item.name, item_path(item) %>
        <p>¥ <%= item.price %></p>
      <% end %>
    </div>
  </div>
</div>
