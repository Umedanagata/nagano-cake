<div class="container">
  <div class="row">
    <div class="col-xs-7 col-xs-offset-1">
      <h3>注文履歴一覧</h3>

      <table class="table">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払総額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.ship_name %></td>
          <td></td>
          <td><%= order.amount %></td>
          <td><%= order.orders_status %></td>
          <td><%= link_to "表示する", order_path(@orders), class: "btn btn-info" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>