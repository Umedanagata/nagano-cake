<div class="container">
  <div class="row">
      <h2>配送先登録/一覧</h2><br>

      <%=form_for(@address) do |f| %>
      <div class="col-xs-9 col-xs-offset-3">
        <div class="field"><br>
          <%= f.label "郵便番号（ハイフンなし）" %>
          <%= f.text_field :postcode %>
        </div>

        <div class="field"><br>
          <%= f.label "住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="field"><br>
          <%= f.label "宛名" %>
          <%= f.text_field :ship_name %>
        </div>

        <div class="action">
          <%= f.submit "登録する", class: "btn btn-success" %>
        </div>
        <% end %><br>

        <table class="table">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
          <%= @addresses.each do |f| %>
          <tr>
          	<td><%= f.postcode %></td>
          	<td><%= f.address %></td>
          	<td><%= f.ship_name %></td>
          	<td><%= link_to "編集する", edit_address_path(@addresses), class: "btn btn-info" %>
          		<%= link_to "削除する", addresses_path(@addresses), method: :delete, class: "btn btn_danger" %>
          	</td>
          </tr>
          <% end %>
        </table>
      </div>
  </div>
</div>
