<div class="container">
	<div class=" row">
		<div>
			<h3>注文履歴詳細</h3>
		</div><br>
		<div class="col-xs-6">
			<p>注文情報</p>
			<table class="table">
					<tr>
						<th>注文日</th>
						<th><%= @order.created_at. strftime('%Y/%m/%d/%R') %></th>
					</tr>
					<tr>
						<th>配送先</th>
						<th><%= @orders.postcode %><br><%= @order.address %></th>
					</tr>
					<tr>
						<th>支払い方法</th>
						<th><%= @order.payment_method %></th>
					</tr>
					<tr>
						<th>ステータス</th>
						<th><%= @order.order.status%></th>
					</tr>
			</table>
		</div>

		<div class="col-xs-6">
			<p>請求情報</p>
			<table class="table">
					<tr>
						<th>商品合計</th>
						<th><%= order.quantity%></th>
					</tr>
					<tr>
						<th>配送料</th>
						<th><%= @order.postage %></th>
					</tr>
					<tr>
						<th><strong>ご請求金額</strong></th>
						<th><%= @order.amount %></th>
					</tr>
			</table>
		</div>

		<div class="col-xs-8">
			<p>注文内容</p>
			<table class="table">
					<tr>
						<th>商品</th>
						<th>単価</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
					<tr>
						<th><%= @order.item.name%></th>
						<th><%= @order.item.price%></th>
						<th><%= @order.item.count%></th>
						<th><%= @order%></th>
					</tr>
			</table>
		</div>
	</div>
</div>