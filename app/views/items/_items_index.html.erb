<div class="item-index">
  <% @items.each do |item| %>
    <div class="item-box", style="float: left;">
      <div class="item-image">
        <%= link_to item_path(item) do %>
        <%= attachment_image_tag item, :image, :fill, 200, 140,
          fallback: "noimage.jpg", size: "200x140" %>
        <% end %>
      </div>
      <h4><%= item.name %></h4>
      <p>¥<%= (item.price * 1.08).floor %>(税込)</p>
    </div>
  <% end %>

</div>
