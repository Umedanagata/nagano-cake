<div class="container">
  <div class="row">
    <div class="col-xs-2">
    </div>
<!-- 会員編集画面 -->
    <div class="col-xs-8">
      <h3 class= "customer_table">
        <strong>会員編集画面</strong>
      </h3>

      <div class="form-horizontal" role="form">
        <%= form_for(@customer, url: admins_customer_path, method: :patch) do |f| %>

        <%= render 'layouts/error_messages', model: f.object %>

            <div class="form-group">
              <%= f.label "会員ID" ,:class => "col-sm-3 control-label"%>
              <%= @customer.id %>
            </div>

            <div class="form-group">
              <%= f.label "氏名" ,:class => "col-sm-3 control-label"%>
              <%= f.text_field :family_name %>
               <%= f.text_field :last_name %>
            </div>

            <div class="form-group">
              <%= f.label "フリガナ" ,:class => "col-sm-3 control-label"%>
              <%= f.text_field :family_name_kana %>
              <%= f.text_field :last_name_kana %>
            </div>

            <div class="form-group">
              <%= f.label "郵便番号" ,:class => "col-sm-3 control-label"%>
              <%= f.text_field :postcode %>
            </div>

            <div class="form-group">
              <%= f.label "住所" ,:class => "col-sm-3 control-label"%>
              <%= f.text_field :address%>
            </div>

            <div class="form-group">
              <%= f.label "電話番号" ,:class => "col-sm-3 control-label"%>
              <%= f.text_field :phone_number%>
            </div>

            <div class="form-group">
              <%= f.label "メールアドレス" ,:class => "col-sm-3 control-label"%>
              <%= f.text_field :email%>
            </div>

  <!-- ステータス変更 -->
            <div class="checkbox">
              <%= radio_button_tag :is_active, :true %>
              <%= f.label :is_active,"有効", {value: :true, style: "display :inline-block;",} %>
              <%= radio_button_tag :is_active, :false %>
              <%= f.label :is_active,"退会済み", {value: :false, style: "display :inline-block;"} %>
            </div><br>

            <div class="submit">
            <%= f.submit "変更を保存する" ,data:{confirm:"本当に変更しますか？"} , class:"btn btn-info" %>

          </div>
    <% end %>
    </div>
    </div>
<!-- 会員詳細リンク -->
    </div>
  </div>
</div>