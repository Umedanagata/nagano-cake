<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h3><strong>会員一覧画面</strong></h3>
    </div>
    
<!-- 会員一覧表示 -->
    <div class="col-xs-7 , customer_table">
    <table class="table table-default">
      <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
      </tr>
      <% @customers.each do |customer| %>
      <tr>
          <td><%= customer.id %></td>
<!-- 編集リンク -->
          <td>
          <%= link_to admins_customer_path(customer.id) do %>
          <%= customer.family_name<< customer.last_name %>
          <% end %>
          </td>
          <td><%= customer.email %></td>
          <td><%= customer.is_active?? '有効': '退会済み' %></td>
      </tr>
      <% end %>
    </table>
  </div>
<!-- ページネーション実装 -->
    <%= paginate @customers %>
    <%= link_to "ジャンル仮リンク", admins_genres_path %>
  </div>
</div>