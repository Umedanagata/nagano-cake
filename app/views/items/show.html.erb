<div class="conteiner">
  <div class="row">
    <div class="col-xs-2 col-xs-offset-1">
      <%= render "search_form" %>
    </div>
    <div class="col-xs-8">
      <div class="item-image">
        <%= attachment_image_tag @item, :image, :fill, 500, 350 %>
      </div>
      <h2><%= @item.name %></h2>
      <p><%= @item.text %></p><br>
      <p>¥<%= @item.price  %> (税込)</p>
      <%= link_to "カートに入れる", cart_items_path(@item), method: :post, class: "btn btn-primary" %>
    </div>

  </div>

</div>
