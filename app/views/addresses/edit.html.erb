<div class="container">
  <div class="row">
      <h2>配送先編集</h2><br>

      <%=form_for (@addresses) do |f|%>
      <div class="col-xs-9 col-xs-offset-3">
        <div class="field"><br>
          <%= f.label "郵便番号（ハイフンなし）" %>
          <%= f.text_field :postcode %>
        </div>

        <div class="field"><br>
          <%= f.label "住所" %>
          <%= f.text_field :address %>
        </div>

        <div class="field"><br>
          <%= f.label "宛名" %>
          <%= f.text_field :ship_name %>
        </div>

        <div class="action"><br>
          <%=f.submit"保存する" %>
        </div>
       <% end %>
  </div>
</div>